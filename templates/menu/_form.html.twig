{{ form_start(form) }}
<div class="space-y-6">

    <div>
        {{ form_label(form.restaurant, 'Restaurant', {'label_attr': {'class': 'block text-lg font-medium'}}) }}
        <div class="mt-1">
            {{ form_widget(form.restaurant, {'attr': {'class': 'block w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600 appearance-none'}}) }}
            <div class="absolute inset-y-0 right-0 flex items-center px-2 pointer-events-none">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-5 h-5 text-gray-500">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
            </div>
        </div>
    </div>

    <div>
        {{ form_label(form.name, 'Name', {'label_attr': {'class': 'block text-lg font-medium'}}) }}
        <div class="mt-1">
            {{ form_widget(form.name, {'attr': {'class': 'block w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600'}}) }}
        </div>
    </div>

    <div>
        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-lg font-medium'}}) }}
        <div class="mt-1">
            {{ form_widget(form.description, {'attr': {'class': 'block w-full p-3 h-32 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600'}}) }}
        </div>
    </div>

    <div>
        {{ form_label(form.price, 'Price', {'label_attr': {'class': 'block text-lg font-medium'}}) }}
        <div class="mt-1">
            {{ form_widget(form.price, {'attr': {'class': 'block w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600'}}) }}
        </div>
    </div>

</div>

<button type="submit" class="mt-6 bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-500">
    {{ button_label|default('Save') }}
</button>

{{ form_end(form) }}
