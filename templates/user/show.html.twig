{% extends 'base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
    <h1 class="text-2xl font-semibold mb-4">User Details</h1>

    <table class="table-auto w-full bg-white shadow-md rounded-lg">
        <tbody>
        <tr>
            <th class="py-2 px-4 border">Id</th>
            <td class="py-2 px-4 border">{{ user.id }}</td>
        </tr>
        <tr>
            <th class="py-2 px-4 border">Email</th>
            <td class="py-2 px-4 border">{{ user.email }}</td>
        </tr>
        <tr>
            <th class="py-2 px-4 border">Roles</th>
            <td class="py-2 px-4 border">{{ user.roles ? user.roles|json_encode : '' }}</td>
        </tr>
        <tr>
            <th class="py-2 px-4 border">Password</th>
            <td class="py-2 px-4 border">{{ user.password }}</td>
        </tr>
        <tr>
            <th class="py-2 px-4 border">Name</th>
            <td class="py-2 px-4 border">{{ user.name }}</td>
        </tr>
        <tr>
            <th class="py-2 px-4 border">LastName</th>
            <td class="py-2 px-4 border">{{ user.lastName }}</td>
        </tr>
        <tr>
            <th class="py-2 px-4 border">Phone</th>
            <td class="py-2 px-4 border">{{ user.phone }}</td>
        </tr>
        </tbody>
    </table>

    <div class="mt-6 space-y-4">
        <a href="{{ path('app_user_index') }}" class="flex items-center bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-500 w-max">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-5 h-5 mr-2">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Back to list
        </a>

        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="flex items-center bg-blue-300 text-white px-6 py-2 rounded-md hover:bg-blue-400 w-max">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
                <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10"></path>
            </svg>
            Edit
        </a>

        <div class="flex items-center hover:text-red-700 hover:fill-red-700">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
                <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0"></path>
            </svg>
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
