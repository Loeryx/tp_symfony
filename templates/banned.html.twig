{% extends 'base.html.twig' %}

{% block title %}Access Denied{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-100">
        <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-md text-center">
            <h1 class="text-2xl font-semibold text-red-600 mb-4">Access Denied</h1>
            <p class="text-gray-600 mb-4">{{ message }}</p>
            <a href="{{ path('app_logout') }}" class="text-blue-600 hover:underline">Return to Login</a>
        </div>
    </div>
{% endblock %}