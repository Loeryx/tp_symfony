{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-100">
        <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-md">
            <h1 class="text-2xl font-semibold text-center text-gray-800 mb-6">Reset Your Password</h1>

            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="bg-red-100 text-red-800 border-l-4 border-red-500 p-4 mb-4 rounded-lg" role="alert">
                    {{ flash_error }}
                </div>
            {% endfor %}

            {{ form_start(requestForm) }}

            <div class="mb-4">
                {{ form_label(requestForm.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(requestForm.email, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
                {{ form_errors(requestForm.email) }}
            </div>

            <div class="mb-4 text-sm text-gray-600">
                Enter your email address, and we will send you a link to reset your password.
            </div>

            <button type="submit" class="w-full py-2 px-4 bg-blue-600 text-white font-semibold rounded-md shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
                Send Password Reset Email
            </button>

            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}
