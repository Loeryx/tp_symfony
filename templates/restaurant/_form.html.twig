{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

<div class="space-y-6">
    {% for field in form %}
        {% if field.vars.block_prefixes|last != 'hidden' and field.vars.name != '_token' %}
            <div>
                {{ form_label(field, null, {'label_attr': {'class': 'block text-lg font-medium mb-1'}}) }}

                <div class="relative">
                    {% if field.vars.block_prefixes|last == 'choice' and field.vars.expanded == false %}
                        <div class="relative">
                            {{ form_widget(field, {
                                'attr': {
                                    'class': 'block w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600 appearance-none'
                                }
                            }) }}
                            <div class="absolute inset-y-0 right-0 flex items-center px-2 pointer-events-none">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-5 h-5 text-gray-500">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                </svg>
                            </div>
                        </div>
                    {% else %}
                        {{ form_widget(field, {
                            'attr': {
                                'class': 'block w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600'
                            }
                        }) }}
                    {% endif %}
                </div>

                {% if field.vars.errors|length > 0 %}
                    <p class="mt-2 text-sm text-red-600">{{ field.vars.errors|first.message }}</p>
                {% endif %}
            </div>
        {% endif %}
    {% endfor %}
</div>

<button type="submit" class="mt-6 bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-500">
    {{ button_label|default('Save') }}
</button>

{{ form_end(form) }}
